{
  "manifest_version": 3,
  "name": "Domino's Spend Calculator",
  "version": "1.0",
  "description": "Calculate total spend on Domino's orders.",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://api.dominos.co.in/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png"
    }
  }
}
